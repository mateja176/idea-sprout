{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["ES2019", "DOM"],
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["react/experimental"]
  },
  "compileOnSave": true
}
