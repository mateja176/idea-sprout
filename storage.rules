rules_version = "2";

service firebase.storage {
  match /b/{bucket}/o {
    match /images/{segment}/{path=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && segment == request.auth.uid;
    }
    match /videos/{segment}/{path=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && segment == request.auth.uid;
    }
  }
}
